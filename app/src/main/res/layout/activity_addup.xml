<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bg01"
        android:scaleType="centerCrop"
        android:id="@+id/bg01"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        />


    <TextView
        android:id="@+id/add_up_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/bangers"
        android:text="Add Up"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:textStyle="normal" />


    <ImageView
        android:id="@+id/background_icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/background_icons" />

    <EditText
        android:id="@+id/add_total_budget_bar"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/email_bar"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#070000"
        android:textColorHint="#364e4a" />


    <TextView
        android:id="@+id/enter_amount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="183dp"
        android:fontFamily="@font/cambo"
        android:text="Enter Amount"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="30sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/add_expense_bar"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/pass_bar"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#070000"
        android:textColorHint="#364e4a"
        android:textColorLink="#2196F3" />




    <EditText
        android:id="@+id/add_debt_bar"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/pass_bar"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="#070000"
        android:textColorHint="#364e4a"
        android:textColorLink="#2196F3" />

    <Button
        android:id="@+id/add_budget_button"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/sign_in_button"
        android:fontFamily="@font/cambo"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:text ="Budget"
        app:backgroundTint="@null" />


    <Button
        android:id="@+id/add_expence_button"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/sign_in_button"
        android:fontFamily="@font/cambo"
        android:text="Expence"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:backgroundTint="@null" />


    <Button
        android:id="@+id/pay_debt_button"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/sign_in_button"
        android:fontFamily="@font/cambo"
        android:text="Pay Debt"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:backgroundTint="@null" />


    <ImageView
        android:id="@+id/logo_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="311dp"
        android:layout_marginTop="44dp"
        android:rotationX="0"
        android:src="@drawable/logo_icon" />



</RelativeLayout>